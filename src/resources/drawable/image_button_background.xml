<!-- res/drawable/image_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Butona tıklandığında gösterilecek renk -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Transparan siyah (tıklama efekti) -->
        </shape>
    </item>
    <!-- Buton normal durumdayken -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparan arka plan -->
        </shape>
    </item>
</selector>
