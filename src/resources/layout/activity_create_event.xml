<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddd"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beyaz_arkaplan"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_etkinlikAdresi"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/beyaz_kutu"
            android:ems="10"
            android:hint="Adres: "
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="#8e8e8e"
            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:padding="8dp"
                android:text="Şehir:"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_cities"
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/beyaz_kutu" />

        </LinearLayout>-->

        <EditText
            android:id="@+id/et_etkinlikTarihi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/beyaz_kutu"
            android:ems="10"
            android:hint="DD.MM.YYYY"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="#8e8e8e"
            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_etkinlikAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/beyaz_kutu"
            android:ems="10"
            android:hint="Etkinlik Adı"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="#8e8e8e"
            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_etkinlikAciklamasi"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/beyaz_kutu"
            android:ems="10"
            android:hint="Etkinlik açıklaması giriniz "
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="#8e8e8e"
            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_price"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:padding="8dp"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:background="@drawable/beyaz_kutu"
                android:hint="Etkinlik Ücreti"/>

            <CheckBox
                android:id="@+id/cb_free"
                android:layout_width="126dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Ücretsiz"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_participantLimit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:inputType="number"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:background="@drawable/beyaz_kutu"
                android:hint="Katılımcı Sınırı"/>

            <CheckBox
                android:id="@+id/cb_unlimited"
                android:layout_width="126dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Sınırsız"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:padding="8dp"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Kategori:"/>

            <Spinner
                android:id="@+id/spinner_categories"
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/beyaz_kutu" />

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_height="40dp"
            android:background="@drawable/button_riple"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="etkinligiOlustur"
            android:text="Etkinliği Oluştur" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
